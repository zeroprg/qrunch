Ext.define('qrunch.controller.LoginViewController', {
  extend: 'Ext.app.Controller',

  config: {
    refs: {
      rootView: '#root-view'
    },

    control: {
      "#login-button": {
        tap: 'authorize'
      },
      "#signup-button": {
        tap: 'showRegistrationView'
      }
    }
  },

  authorize: function(button, e, options) {
    Ext.Ajax.request({
      url: 'http://thecrunch.ca:8080/CrunchRESTful/userProfile/login',
      method: 'POST',
      params: 
      {
        userId: Ext.getCmp('login-view-email').getValue(),
        password: Ext.getCmp('login-view-password').getValue()
      },
      success: function(response){
        console.log(Ext.decode(response.responseText));
        Ext.getCmp('root-view').animateActiveItem(1, {type: 'fade'});
      }
    })
  },

  showRegistrationView: function(button, e, options) {
    this.getRootView().animateActiveItem(2, {type: 'fade'});
  }

});